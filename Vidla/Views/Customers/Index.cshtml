@model Vidla.ViewModels.CustomerIndexViewModel
    @{
        ViewBag.Title = "Index";
    }

    <h2>Customers</h2>

    <table class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>Customer Name</th>
            </tr>
            <tr>
                <th>Membership Types</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
            <tr>
                <td>
                    <a href="@Url.Action("Details","Customers", new { id = customer.Id })">@customer.Name</a>
                </td>
                <td>
                    @customer.MembershipType.Name
                </td>
            </tr>
                
            }

        </tbody>
    </table>



